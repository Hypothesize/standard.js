{
	"compilerOptions": {
		"target": "ES2015",
		"module": "commonjs",
		"lib": [
			"DOM",
			"DOM.Iterable",
			"ScriptHost",
			"ES5",
			"ES2019.Array",
			"ESNext.Array",
			"ES2015.Generator",
			"ES2017.TypedArrays",
			"ES2015",
			"ES2016",
			"ES2017",
			"ES2018",
			"ES2019",
			"ES2020",
			"ESNext",
			"ES2018.Promise",
			"ES2018.AsyncIterable",
			"ES2015.Symbol.WellKnown",
			"ES2020.Symbol.WellKnown",
			"ESNext.Symbol",
			"ES2015.Symbol"
		],
		"esModuleInterop": true,
		"skipLibCheck": true,
		"noEmitOnError": true,
		"declaration": true,
		"incremental": true,
		"strict": true,
		"rootDirs": [
			"src",
			"test"
		],
		"outDir": "./dist"
	},
	"include": [
		"src",
		"test"
	],
	"exclude": [
		"node_modules",
		"dist"
	]
}