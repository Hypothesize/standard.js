{
	"name": "@agyemanjp/standard",
	"version": "1.0.0",
	"description": "Standard library for JavaScript/TypeScript",
	"main": "dist/_index.js",
	"types": "dist/_index.d.ts",
	"files": [
		"dist/*.js",
		"dist/*.d.ts",
		"!/dist/**/*test.*"
	],
	"scripts": {
		"setup": "rm -rf ./node_modules package-lock.json && npm install",
		"clean": "rm -rf ./dist .eslintcache *-report.json",
		"lint": "eslint --ext ts --cache src/*",
		"lint-report": "eslint --ext ts --output-file .lint-report.json --format json-standard --cache src/*",
		"build": "rm -rf dist/*.js && tsc && flatten dist && rm -rf dist/*.test.js.map dist/*.test.d.ts",
		"test": "mocha dist/*.test.js",
		"test-report": "mocha dist/*.test.js --reporter mocha-reporter-json-standard >| .test-report.json",
		"ci": "npm run clean && npm run lint && npm run build && npm run test"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/Hypothesize/standard.js.git"
	},
	"keywords": [],
	"contributors": [
		{
			"name": "James Prempeh"
		},
		{
			"name": "Arthur Plouet"
		},
		{
			"name": "Diego Cisneros"
		}
	],
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/Hypothesize/standard.js/issues"
	},
	"homepage": "https://github.com/Hypothesize/standard.js#readme",
	"dependencies": {
		"request": "^2.88.2"
	},
	"devDependencies": {
		"@hutsoninc/flatten-dir-cli": "^1.0.2",
		"@types/eslint": "^7.2.0",
		"@types/mocha": "^7.0.2",
		"@types/node": "^14.0.27",
		"@types/request": "^2.48.5",
		"@types/source-map-support": "^0.5.2",
		"@typescript-eslint/eslint-plugin": "^3.4.0",
		"@typescript-eslint/parser": "^3.4.0",
		"eslint": "^7.6.0",
		"eslint-formatter-json-standard": "^1.0.0",
		"eslint-plugin-fp": "^2.3.0",
		"mocha": "^7.2.0",
		"mocha-reporter-json-standard": "^1.0.0",
		"source-map-support": "^0.5.19",
		"typescript": "3.8.3"
	}
}
